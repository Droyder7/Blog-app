<%- include('partials/header'); %>
<div class="ui main container segment">
	<div class="ui huge header"><%= title %></div>
	<% const noBlog = (blog===null) %>
	<form class="ui form" action="" method="post">
		<div class="field">
			<label>Title</label>
			<input
				type="text"
				name="title"
				placeholder="title"
				value="<%= noBlog ? '' : blog.title %>"
			/>
		</div>
		<div class="field">
			<label>Image</label>
			<input
				type="text"
				name="image"
				placeholder="image"
				value="<%= noBlog ? '' : blog.image %>"
			/>
		</div>
		<div class="field">
			<label>Blog Content</label>
			<textarea name="body" placeholder="Blog contents goes here">
                <%= noBlog ? '' : blog.body %>
            </textarea
			>
		</div>
		<input class="ui violet big basic button" type="submit" />
	</form>
	<% if (errors) { %>
	<ul>
		<% for( let i = 0; i < errors.length; i++ ) { %>
		<li><%= errors[i].msg %></li>
		<% } %>
	</ul>
	<% } %>
</div>
<%- include('partials/footer'); %>
